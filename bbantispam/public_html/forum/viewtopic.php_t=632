<br />

<br />
$questions = array(
<br />
  'Are you human?' =&gt; array ('yes', 'ja', 'oui'),
<br />
  'Say &quot;AppleFun&quot;'    =&gt; array ('AppleFun', 'AppleFun', 'AppleFun')
<br />
'Say &quot;George Bush&quot;'    =&gt; array ('George Bush', 'George Bush', 'George Bush')
<br />

